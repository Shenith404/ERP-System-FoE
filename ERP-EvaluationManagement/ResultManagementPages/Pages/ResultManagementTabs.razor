@using ERP_EvaluationManagement.ResultManagementPages.Components


<div style="display: flex; gap: 16px;">
    <MudPaper Elevation="2" Class="pa-4" Style="@($"background:{Colors.LightBlue.Lighten5}; width: 80%; height: auto;")">

<MudTabs Outlined="true" Rounded="true" Border="true"
         ApplyEffectsToContainer="true" PanelClass="pa-6" Color="Color.Primary">

    <MudTabPanel Text="Coordinating Modules" >
        <MudGrid>
            <MudItem xs="9">
                <ModuleListForResultComponent />
            </MudItem>
            @* <MudItem xs="2" Class="mt-15">
                <MudDatePicker Class="pr-5" PickerVariant="PickerVariant.Static" Rounded="true" Elevation="0" Date="DateTime.Today" />
            </MudItem> *@
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="First Examiner Modules" >
        <MudGrid>
            <MudItem xs="9">
                <FirstExaminarModuleListResultComponent />
            </MudItem>
            @* <MudItem xs="2" Class="mt-15">
                <MudDatePicker Class="pr-5" PickerVariant="PickerVariant.Static" Rounded="true" Elevation="0" Date="DateTime.Today" />
            </MudItem> *@
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="Second Examiner Modules" >
        <MudGrid>
            <MudItem xs="9">
                <SecondExaminarModuleListResultComponent />
            </MudItem>
           @*  <MudItem xs="2" Class="mt-15">
                <MudDatePicker Class="pr-5" PickerVariant="PickerVariant.Static" Rounded="true" Elevation="0" Date="DateTime.Today" />
            </MudItem> *@
        </MudGrid>
    </MudTabPanel>
</MudTabs>
</MudPaper>
<MudPaper>
        <MudDatePicker Class="mb-5" PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />

        <MudCarousel Class="mud-width-full" Style="height:200px;" AutoCycle="@autocycle" TData="object">

            <MudCarouselItem Transition="transition" Color="@Color.Primary">
